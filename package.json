{
  "name": "persistent-highlighter",
  "displayName": "Persistent Highlighter",
  "publisher": "jsfaint",
  "icon": "icon.png",
  "description": "A VS Code extension to highlight text persistently across files and windows.",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsfaint/persistent-highlighter.git"
  },
  "version": "0.0.11",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Persistent Highlighter",
      "properties": {
        "persistent-highlighter.caseSensitive": {
          "type": "boolean",
          "default": false,
          "description": "caseSensitive matching for highlights"
        },
        "persistent-highlighter.enableContextMenu": {
          "type": "boolean",
          "default": true,
          "description": "Enable right-click context menu for highlighting"
        },
        "persistent-highlighter.contextMenuCollapsed": {
          "type": "boolean",
          "default": false,
          "description": "Collapse context menu submenus by default"
        }
      }
    },
    "commands": [
      {
        "command": "persistent-highlighter.addHighlight",
        "title": "Persistent Highlighter: Add Highlight"
      },
      {
        "command": "persistent-highlighter.removeHighlight",
        "title": "Persistent Highlighter: Remove Highlight"
      },
      {
        "command": "persistent-highlighter.toggleHighlight",
        "title": "Persistent Highlighter: Toggle Highlight"
      },
      {
        "command": "persistent-highlighter.clearAllHighlights",
        "title": "Persistent Highlighter: Clear All Highlights",
        "icon": "$(clear-all)"
      },
      {
        "command": "persistent-highlighter.refreshTree",
        "title": "Persistent Highlighter: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "persistent-highlighter.jumpToHighlight",
        "title": "Persistent Highlighter: Jump to Highlight"
      },
      {
        "command": "persistent-highlighter.removeHighlightFromTree",
        "title": "Persistent Highlighter: Remove Highlight",
        "icon": "$(trash)"
      },
      {
        "command": "persistent-highlighter.editHighlight",
        "title": "Persistent Highlighter: Edit Highlight",
        "icon": "$(edit)"
      },
      {
        "command": "persistent-highlighter.addHighlightWithCustomColor",
        "title": "Persistent Highlighter: Add Custom Color Highlight"
      },
      {
        "command": "persistent-highlighter.jumpToNextHighlight",
        "title": "Persistent Highlighter: Jump to Next Highlight"
      },
      {
        "command": "persistent-highlighter.jumpToPrevHighlight",
        "title": "Persistent Highlighter: Jump to Previous Highlight"
      },
      {
        "command": "persistent-highlighter.contextMenuAddHighlight",
        "title": "Add Highlight"
      },
      {
        "command": "persistent-highlighter.contextMenuRemoveHighlight",
        "title": "Remove Highlight"
      },
      {
        "command": "persistent-highlighter.contextMenuToggleHighlight",
        "title": "Toggle Highlight"
      },
      {
        "command": "persistent-highlighter.contextMenuCustomColor",
        "title": "Add Custom Color Highlight"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "highlightsView",
          "icon": "icon.png",
          "name": "Highlights"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "persistent-highlighter.refreshTree",
          "when": "view == highlightsView",
          "group": "navigation"
        },
        {
          "command": "persistent-highlighter.clearAllHighlights",
          "when": "view == highlightsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "persistent-highlighter.editHighlight",
          "when": "view == highlightsView && viewItem == highlightItem",
          "group": "inline"
        },
        {
          "command": "persistent-highlighter.removeHighlightFromTree",
          "when": "view == highlightsView && viewItem == highlightItem",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "submenu": "persistent-highlighter.contextMenu",
          "when": "config.persistent-highlighter.enableContextMenu && config.persistent-highlighter.contextMenuCollapsed",
          "group": "9_cutcopypaste"
        },
        {
          "command": "persistent-highlighter.contextMenuAddHighlight",
          "when": "config.persistent-highlighter.enableContextMenu && !config.persistent-highlighter.contextMenuCollapsed",
          "group": "1_highlight"
        },
        {
          "command": "persistent-highlighter.contextMenuRemoveHighlight",
          "when": "config.persistent-highlighter.enableContextMenu && !config.persistent-highlighter.contextMenuCollapsed",
          "group": "1_highlight"
        },
        {
          "command": "persistent-highlighter.contextMenuToggleHighlight",
          "when": "config.persistent-highlighter.enableContextMenu && !config.persistent-highlighter.contextMenuCollapsed",
          "group": "1_highlight"
        },
        {
          "command": "persistent-highlighter.contextMenuCustomColor",
          "when": "config.persistent-highlighter.enableContextMenu && !config.persistent-highlighter.contextMenuCollapsed",
          "group": "1_highlight"
        }
      ],
      "persistent-highlighter.contextMenu": [
        {
          "command": "persistent-highlighter.contextMenuAddHighlight",
          "when": "config.persistent-highlighter.enableContextMenu",
          "group": "1_highlight"
        },
        {
          "command": "persistent-highlighter.contextMenuRemoveHighlight",
          "when": "config.persistent-highlighter.enableContextMenu",
          "group": "1_highlight"
        },
        {
          "command": "persistent-highlighter.contextMenuToggleHighlight",
          "when": "config.persistent-highlighter.enableContextMenu",
          "group": "1_highlight"
        },
        {
          "command": "persistent-highlighter.contextMenuCustomColor",
          "when": "config.persistent-highlighter.enableContextMenu",
          "group": "1_highlight"
        }
      ]
    },
    "submenus": [
      {
        "id": "persistent-highlighter.contextMenu",
        "label": "Persistent Highlighter"
      }
    ],
    "keybindings": [
      {
        "command": "persistent-highlighter.toggleHighlight",
        "key": "shift+f1"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^8.41.0",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0"
  }
}