{
  "name": "persistent-highlighter",
  "displayName": "Persistent Highlighter",
  "description": "A VS Code extension to highlight text persistently across files and windows.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:persistent-highlighter.addHighlight",
    "onCommand:persistent-highlighter.removeHighlight",
    "onCommand:persistent-highlighter.toggleHighlight"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "persistent-highlighter.addHighlight",
        "title": "Persistent Highlighter: Add Highlight"
      },
      {
        "command": "persistent-highlighter.removeHighlight",
        "title": "Persistent Highlighter: Remove Highlight"
      },
      {
        "command": "persistent-highlighter.toggleHighlight",
        "title": "Persistent Highlighter: Toggle Highlight"
      }
    ],
    "keybindings": [
      {
        "command": "persistent-highlighter.addHighlight",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h"
      },
      {
        "command": "persistent-highlighter.removeHighlight",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u"
      },
      {
        "command": "persistent-highlighter.toggleHighlight",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.9.2"
  }
}
